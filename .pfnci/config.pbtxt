configs {
  key: "cupy.experimental.win.cuda100"
  value {
    requirement {
      cpu: 8
      memory: 24
      disk: 10
      gpu: 2
      image: "windows"
    }
    time_limit {
      seconds: 36000
    }
    checkout_strategy {
      include_dot_git: true
    }
    environment_variables { key: "GPU" value: "2" }
    environment_variables { key: "CUPY_CI_CACHE_KERNEL" value: "1" }
    command: ".pfnci\\windows\\run.bat 10.0 3.7 test"
  }
}

